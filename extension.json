{
  "jest": {
    "preset": "react-native",
    "timers": "fake",
    "setupFilesAfterEnv": ["<rootDir>/jestSetup.js"],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "yarn lint",
      "yarn test",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
